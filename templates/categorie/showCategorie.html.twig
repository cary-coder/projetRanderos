{% extends "layout.html.twig" %}

{% block title %}
	show categorie user
	{{categorie.nom }}
{% endblock %}

{% block content %}
	<div
		class="container">
		<!-- Content here -->
		<div class="row d-flex justify-content-center">
			<div class="card" style="width: 50em">
				<img class="car-img-top rounded w-100 vh-50" src="{{asset('photosCategories/' ~ categorie.photo)}}" alt="Card image cap">
				<div class="card-header text-center">
					<h1 class="card-title text-uppercase text-primary">
						{{ categorie.nom }}</h1>
				</div>
				<div
					class="card-body">
					<!-- lire le contenu comme html et non comme texte plane  -->
					<p class="card-text">{{ categorie.contenu | raw}}
					</p>
					<div class="card-footer text-center">
						<a href="{{ path('articles_categorie', { id: categorie.id }) }}">
							<button class="btn btn-lg btn-primary" type="button">
								{% trans %}Voir articles{% endtrans %}
							</button>
						</a>
						<a href="{{ path('app_home')}}">
							<button class="btn btn-lg btn-secondary" type="button">
								{% trans %}Vers ouvrages {% endtrans %}</button>
							</div>
						</div>
					</div>
				</div>
			</div>

		{% endblock content %}
