{% extends "layout.html.twig" %}

{% block title %}
	{{ article.titre }}
{% endblock %}
{% block content %}
	<div class="row d-flex justify-content-center">

		<div class="card " style="width: 50em">
			<div class="card-header text-center">
				<h1 class="text-primary">{{article.titre}}</h1>
				<h2 class="text-uppercase text-success">
					{{ article.categorie.nom }}</h2>
				<h5 class="card-title">{% trans %}
					publi√© le:
					{% endtrans %}
					{{article.dateDeCreation | date("d/m/Y")}}</h5>
			</div>
			<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
				<div class="carousel-inner">
					{% for image in article.images %}
						<div {% if loop.index0==0 %} class="carousel-item active" {% else %} class="carousel-item" {% endif %}>
							<img src="{{ asset('photosArticles/' ~ image.name ) }}" class="d-block rounded w-100 vh-50" alt="image">
						</div>
					{% endfor %}
					<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Previous</span>
					</button>
					<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Next</span>
					</button>
				</div>
				<div
					class="card-body">
					<!-- lire le contenu comme html et non comme texte plane  -->
					<p class="card-text">{{ article.contenu | raw}}</p>
					<div class="card-footer text-center">
						<a href="{{ path( 'articles_all')}}" class="btn btn-lg btn-primary" type="button">
							{% trans %}Vers articles{% endtrans %}</a>
						<a href="{{ path('app_home')}}" class="btn btn-lg btn-secondary" type="button">
							{% trans %}Vers ouvrages{% endtrans %}</i>
					</a>
				</div>
			</div>
		</div>

	</div>
{% endblock content %}
