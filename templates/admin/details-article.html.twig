{% extends "layout.html.twig" %}

{% block title %}
	details article
	{{article.titre }}
{% endblock %}

{% block content %}
	<div class="row d-flex justify-content-center text-center">
		<h1>
			Details de l'article n°
			{{ article.id }}</h1>
		<h3 class="text-uppercase text-success">
			{{ article.titre }}</h3>
		<h3 class="text-uppercase text-success">
			{{ article.categorie.nom }}</h3>
		<h4 class="card-title">auteur: 
			{{article.auteur}}</h4>
		<h4 class="text-muted">
			<strong>date d'ajout :
			</strong>
			{{ article.dateDeCreation | date('d/m/Y \à H\\hi') }}</h4>
		<div class="card" style="width: 40em">
			<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
				<div class="carousel-inner">
					{% for image in article.images %}
						<div {% if loop.index0==0 %} class="carousel-item active" {% else %} class="carousel-item" {% endif %}>
							<img src="{{ asset('photosArticles/' ~ image.name ) }}" class="d-block w-100 vh-50" alt="image">
						</div>
					{% endfor %}
					<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Previous</span>
					</button>
					<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Next</span>
					</button>
				</div>
				<div class="card-body">
					<p class="card-text">{{ article.contenu | raw}}</p>
				</div>
			</div>
		</div>

	{% endblock content %}
