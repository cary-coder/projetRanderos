{% extends "layout.html.twig" %}
{% block title %}
	Tenerife plus
{% endblock
%}

{% block content %}
	<h2 class="text-primary">Nous vous présentons ici les expériences de nos différents itinéraires et randonnées à Tenerife et quelques informations utiles.
			Bonne lecture!</h2>
	<div class="row mt-5">
		<div class="col-md-10 justify-content-center text-center">
			<div class="row row-cols-1 row-cols-md-4 g-4">
				{% for article in articles | filter (article => article.categorie.nom == 'Video') %}
					<div class="col">
						<div class="card">
							<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
								<div class="carousel-inner">
									{% for image in article.images %}
										<div {% if loop.index0==0 %} class="carousel-item active" {% else %} class="carousel-item" {% endif %}>
											<img src="{{ asset('photosArticles/' ~ image.name ) }}" class="d-block w-100 vh-50" alt="image">
										</div>
									{% endfor %}
									<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
										<span class="carousel-control-prev-icon" aria-hidden="true"></span>
										<span class="visually-hidden">Previous</span>
									</button>
									<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
										<span class="carousel-control-next-icon" aria-hidden="true"></span>
										<span class="visually-hidden">Next</span>
									</button>
								</div>
							</div>
							<div class="card-body">
								<h2 class="card-title text-primary">{{article.titre}}</h2>
								<h5 class="card-title">publié le:
									{{article.dateDeCreation | date("d/m/Y")}}</h5>
								<div class="d-grid gap-4">
									<a href="{{ path( 'article_show',{id: article.id} )}}" class="btn btn-lg btn-primary" type="button">
										Lire plus</a>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}

